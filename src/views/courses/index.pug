extends ../layouts/page.pug

block title
  title Список курсов

block header 
  div.collapse.navbar-collapse.show
    ul
      li.nav-item
        h1= header
      li.nav-item
        h3 
          a(href='/') На главную
      li.nav-item
        form(role = 'form' method = 'GET' action = '/сourses')
          input(type = 'search', name = 'term', value = term)
          input(type = 'submit' value = 'search')

block content
  h3  
    a(href='/courses/new') Добавить новый курс
  if courses.length === 0
    p Пока не добавлено ни одного курса
  else
    each course in courses
      div
        #{course.title}
          h2
            a(href=`/courses/${course.id}`)= course.title
          p= course.description
  h3 
    a(href='/') Назад