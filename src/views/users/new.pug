extends ../layouts/page.pug

block title
  title Создать нового пользователя

block header
  div.collapse.navbar-collapse.show
    ul
      li.nav-item
        h1= header
      li.nav-item
        h3 
          a(href= routes.mainPagePath()) На главную

block content
  if error
    p= error.message
  
  if messages
    for message in messages
      .alert(class=`alert-${message.type}`)= message.message

  form(action = routes.usersPath(), method = 'post')
    div
      label ID:
        input(type = 'text', name = 'id', value = id || '', required = true)
    div
      label Имя:
        input(type = 'text', name = 'username', value = username || '')
    div
      label Email:
        input(type = 'email', name = 'email', value = email || '', required = true)
    div
      label Пароль:
        input(type = 'password', name = 'password', value = password || '', required = true)
    div
      label Подтверждение пароля:
        input(type = 'password', name = 'passwordConfirmation', value = passwordConfirmation || '', required = true)
    input(type = 'submit', value = 'Зарегистрировать')
  h3 
    a(href= routes.usersPath()) Назад